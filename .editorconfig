# http://editorconfig.org/
root = true

[*]
charset = utf-8
indent_size = 2
indent_style = space
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.js]
indent_style = space
indent_size = 2
max_line_length=80

[*.ts]
indent_style = space
indent_size = 2
max_line_length=80

[*.md]
trim_trailing_whitespace = false
